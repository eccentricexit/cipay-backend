{
  "name": "cipay",
  "version": "1.0.0",
  "description": "Pay in BRL with your crypto.",
  "author": "Visus",
  "scripts": {
    "start": "npm run build && node dist",
    "build": "tsc",
    "lint:eslint": "eslint . --ext .ts,.tsx",
    "lint:prettier": "prettier --config .prettierrc 'src/**/*.ts' --check",
    "lint:secrets": "secretlint \"**/*\"",
    "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:secrets",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write && eslint . --ext .ts,.tsx --fix",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@secretlint/secretlint-rule-preset-recommend": "^2.1.1",
    "@secretlint/secretlint-rule-secp256k1-privatekey": "^2.1.1",
    "@types/express": "^4.17.9",
    "@types/express-ws": "^3.0.0",
    "@types/jest": "~26.0.15",
    "@types/node": "~14.14",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "~4.7.0",
    "@typescript-eslint/parser": "~4.7.0",
    "eslint": "~7.13.0",
    "eslint-config-prettier": "~6.15.0",
    "eslint-plugin-jest": "~24.1.3",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "~26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "~2.1.2",
    "rimraf": "~3.0.2",
    "secretlint": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-jest": "~26.4.4",
    "tsutils": "~3.17.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "delay": "^4.4.0",
    "dotenv-safe": "^8.2.0",
    "ethers": "^5.0.25",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "starkbank": "^2.2.0",
    "tslib": "~2.0.3"
  },
  "engines": {
    "node": ">= 14.15 <15"
  },
  "volta": {
    "node": "12.20.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*": "npm run lint"
  }
}
